---
import ContentArea from "../components/content-area.astro";
import Nav from "../components/nav.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body class="flex h-full bg-zinc-50 dark:bg-black">
    <ContentArea />
    <div class="relative">
      <Nav />
    </div>
    <button class="fixed left-0 top-36" id="dev-theme-mode-toggle"
      >Toggle</button
    >
    <script>
      function toggleDark() {
        const $html = document.querySelector("html");
        if ($html?.classList.contains("dark")) {
          $html.classList.remove("dark");
        } else {
          $html?.classList.add("dark");
        }
      }
      const $toggleButton = document.querySelector("#dev-theme-mode-toggle");
      if ($toggleButton) $toggleButton.addEventListener("click", toggleDark);
    </script>
  </body>
</html>
